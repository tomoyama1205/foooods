.signin-box
  %h2.signup-box__title
    Satty
  %h4.signup-box__title2
    ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, class: "box", autofocus: true, autocomplete: "email",placeholder: "メールアドレスを入力"
    .field
      = f.label :password
      %br/
      = f.password_field :password, class: "box", autocomplete: "current-password",placeholder: "パスワードを入力"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .field1
      = f.submit "ログイン", class: "btn"
